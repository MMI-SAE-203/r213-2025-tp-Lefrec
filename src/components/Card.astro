---
const { id, nomMaison, favori, imgURL, prix, surface } = Astro.props;
---

<div x-data=`{fav : ${favori}}` class="border p-4 rounded flex-auto max-w-[1000px]">
    <img class="rounded-md" src={imgURL} alt="alt" />
    <h3 class="text-2xl">{nomMaison}</h3>
    <div class="flex justify-between">
        <button
            class="rounded-xl p-1 text-xs"
            :class="fav ? 'bg-blue-200' : 'bg-gray-200'"
            @click="fav =!fav">favori</button
        >
        <a class="border-2 border-indigo-200 rounded-lg p-1 hover:bg-indigo-200" href={`/offres/${id}`}>Voir plus</a>
    </div>
</div>
